<main class="bs-docs-masthead" role="main">
	<form method="post" action="<CLASS:URL->getDir()>login.php">
	<input type="hidden" name="login" value="account_add">

	<div class="login">
		<div class="input-area">

			<div class="input-group">
				<h3>Userアカウントの作成</h3>
			</div>

			<div class="input-group">
				<span class="input-group-addon">Login-ID</span>
				<input class="form-control" type="text" name="login_id" autocomplete="off">
			</div>

			<div class="input-group">
				<span class="input-group-addon">Password</span>
				<input class="form-control" type="password" name="login_pw" autocomplete="off">
			</div>

			<div class="input-group">
				<span class="input-group-addon">Mail</span>
				<input class="form-control" type="text" name="user[mail]" autocomplete="off">
			</div>

			<div class="login-submit">
				<button class="btn btn-default">
					<span>Sign-up</span>
				</button>
			</div>

		</div>

	</div>
	</form>
</main>
